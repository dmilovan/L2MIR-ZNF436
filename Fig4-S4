                           ifelse(grepl("3|5", DA.250.up$annotation), "Exon", 
                           ifelse(grepl("Exon", DA.250.up$annotation), "Exon",
                           ifelse(grepl("Downstream", DA.250.up$annotation), "Distal Intergenic",
                           DA.250.up$annotation))))
