d15.ctrl.436peak <- fread('C:/Users/dmilovan/Desktop/data/ATAC/intersect/d15_ctrl__436peaks.bed') %>%
  setNames(c('chrom','start','end','chrom.436','start.436','end.436','peak.ID','score','overlap')) %>%
